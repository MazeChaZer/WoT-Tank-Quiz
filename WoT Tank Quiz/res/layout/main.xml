<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" style="">
    
    <ImageView
        android:id="@+id/imageViewWorldOfTanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/ImageDescriptionWorldOfTanks"
        android:src="@drawable/cooltext667386151" />

    <ImageView
        android:id="@+id/imageViewTankQuiz"
        android:contentDescription="@string/ImageDescriptionTankQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageViewWorldOfTanks"
        android:src="@drawable/cooltext667386305" />

    <Button
        android:id="@+id/buttonPlay"
        style="@style/ArmyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewTankQuiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="Play"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:text="@string/Play"
        android:textSize="@dimen/PlayButtonTextSize" />

    <Button
        android:id="@+id/buttonHighscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="showHighscore" android:text="@string/Hightscore" style="@style/ArmyButton"/>

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="@string/ButtonAboutClick" android:text="@string/About" style="@style/ArmyButton"/>

    <Button
        android:id="@+id/buttonLevel"
        style="@style/ArmyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonarmydropdown"
        android:onClick="selectLevel"
        android:text="@string/Easy" />

</RelativeLayout>